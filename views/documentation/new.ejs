<%- layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/css/weeklyReportsNew.css" />

<div class="container mt-4">
    <h1 class="mb-4">Create New Documentation</h1>
    <form action="/documentation" method="POST" novalidate class="validated-form needs-validation">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" id="title" name="title" required>
        </div>
        
        <div class="mb-3">
            <label for="content" class="form-label">Content</label>
            <textarea class="form-control" id="content" name="content" rows="10" required></textarea>
        </div>
        
        <div class="mb-3">
            <label for="category" class="form-label">Category</label>
            <select class="form-control" id="category" name="category">
                <option value="general">General</option>
                <option value="technical">Technical</option>
                <option value="process">Process</option>
                <option value="other">Other</option>
            </select>
        </div>
        
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary">Create Documentation</button>
            <a href="/documentation" class="btn btn-secondary ms-2">Cancel</a>
        </div>
    </form>
</div>

<script>
    // Form validation
    (function() {
        'use strict';
        const forms = document.querySelectorAll('.validated-form');
        Array.from(forms).forEach(function(form) {
            form.addEventListener('submit', function(event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    })();
</script>
