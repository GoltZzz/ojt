<%- layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/css/weeklyReportsIndex.css" />
<link rel="stylesheet" href="/css/customModal.css" />
<link rel="stylesheet" href="/css/reportModals.css" />
<script src="/js/reportTooltips.js" defer></script>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Training Schedule Forms</h1>
        <div class="d-flex gap-2">
            <% if (currentUser && currentUser.role !== 'admin') { %>
            <a href="/trainingschedule/new" class="btn btn-primary">
                <i class="fas fa-plus"></i> New Schedule
            </a>
            <% } %>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="filter-card mb-4">
        <div class="filter-header">
            <h4><i class="fas fa-filter me-2"></i>Filter Schedules</h4>
            <button class="btn btn-sm btn-outline-secondary" id="toggleFilters">
                <i class="fas fa-chevron-down"></i>
            </button>
        </div>
        <div class="filter-body" id="filterBody">
            <form id="filterForm" class="row g-3" method="GET" action="/trainingschedule">
                <div class="col-md-4 col-lg-3">
                    <label for="studentName" class="form-label">Student Name</label>
                    <input
                        type="text"
                        class="form-control"
                        id="studentName"
                        name="studentName"
                        value="<%= filters?.studentName || '' %>"
                        placeholder="Search by name"
                    />
                </div>
                <div class="col-md-4 col-lg-3">
                    <label for="internshipSite" class="form-label">Internship Site</label>
                    <input
                        type="text"
                        class="form-control"
                        id="internshipSite"
                        name="internshipSite"
                        value="<%= filters?.internshipSite || '' %>"
                        placeholder="Search by site"
                    />
                </div>
                <div class="col-md-4 col-lg-2">
                    <label for="weekPeriod" class="form-label">Week Period</label>
                    <input
                        type="date"
                        class="form-control"
                        id="weekPeriod"
                        name="weekPeriod"
                        value="<%= filters?.weekPeriod || '' %>"
                    />
                </div>
                <div class="col-md-4 col-lg-2">
                    <label for="status" class="form-label">Status</label>
                    <select class="form-select" id="status" name="status">
                        <option value="" <%= !filters?.status ? 'selected' : '' %>>All Statuses</option>
                        <option value="pending" <%= filters?.status === 'pending' ? 'selected' : '' %>>Pending</option>
                        <option value="approved" <%= filters?.status === 'approved' ? 'selected' : '' %>>Approved</option>
                        <option value="rejected" <%= filters?.status === 'rejected' ? 'selected' : '' %>>Rejected</option>
                    </select>
                </div>
                <div class="col-md-4 col-lg-2">
                    <label for="archived" class="form-label">Archive Status</label>
                    <select class="form-select" id="archived" name="archived">
                        <option value="" <%= !filters?.archived ? 'selected' : '' %>>All Schedules</option>
                        <option value="false" <%= filters?.archived === 'false' ? 'selected' : '' %>>Active Only</option>
                        <option value="true" <%= filters?.archived === 'true' ? 'selected' : '' %>>Archived Only</option>
                    </select>
                </div>
                <div class="col-md-4 col-lg-2">
                    <label for="sortBy" class="form-label">Sort By</label>
                    <select class="form-select" id="sortBy" name="sortBy">
                        <option value="dateSubmitted_desc" <%= filters?.sortBy === 'dateSubmitted_desc' || !filters?.sortBy ? 'selected' : '' %>>Newest First</option>
                        <option value="dateSubmitted_asc" <%= filters?.sortBy === 'dateSubmitted_asc' ? 'selected' : '' %>>Oldest First</option>
                        <option value="studentName_asc" <%= filters?.sortBy === 'studentName_asc' ? 'selected' : '' %>>Name (A-Z)</option>
                        <option value="studentName_desc" <%= filters?.sortBy === 'studentName_desc' ? 'selected' : '' %>>Name (Z-A)</option>
                        <option value="internshipSite_asc" <%= filters?.sortBy === 'internshipSite_asc' ? 'selected' : '' %>>Site (A-Z)</option>
                        <option value="internshipSite_desc" <%= filters?.sortBy === 'internshipSite_desc' ? 'selected' : '' %>>Site (Z-A)</option>
                    </select>
                </div>


                <div class="col-12 mt-3 filter-actions">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search me-1"></i> Apply Filters
                    </button>
                    <a href="/trainingschedule" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-1"></i> Clear Filters
                    </a>
                </div>
            </form>
        </div>
    </div>

    <% if (TrainingSchedules && TrainingSchedules.length) { %>
    <div class="table-responsive">
        <table class="table table-hover report-table">
            <thead>
                <tr>
                    <th>Student Name</th>
                    <th>Internship Site</th>
                    <th>Week Period</th>
                    <th>Supervisor</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% TrainingSchedules.forEach(schedule => { %>
                <tr class="<%= schedule.isCurrentUserReport ? 'current-user-report' : '' %>">
                    <td>
                        <div class="d-flex align-items-center">
                            <% if (schedule.isCurrentUserReport) { %>
                            <span
                                class="your-report-badge"
                                data-bs-toggle="tooltip"
                                title="This is your schedule">
                                <i class="fas fa-user-check"></i>
                            </span>
                            <span class="student-name your-name"><%= schedule.studentName %></span>
                            <% } else { %>
                            <span class="student-name"><%= schedule.studentName %></span>
                            <% } %>
                        </div>
                    </td>
                    <td><%= schedule.internshipSite %></td>
                    <td>
                        <span class="date-range">
                            <i class="far fa-calendar-alt me-1"></i>
                            <%= new Date(schedule.startDate).toLocaleDateString() %> -
                            <%= new Date(schedule.endDate).toLocaleDateString() %>
                        </span>
                    </td>
                    <td><%= schedule.trainer %></td>
                    <td>
                        <% if (schedule.status === 'approved') { %>
                        <div class="status-badge">
                            <span class="badge bg-success">
                                <i class="fas fa-check-circle me-1"></i> Approved
                            </span>
                            <% if (schedule.approvedBy) { %>
                            <small class="d-block text-muted mt-1">
                                by <%= schedule.approvedBy.username %>
                            </small>
                            <% } %>
                        </div>
                        <% } else if (schedule.status === 'rejected') { %>
                        <div class="status-badge">
                            <span class="badge bg-danger">
                                <i class="fas fa-times-circle me-1"></i> Rejected
                            </span>
                            <% if (schedule.approvedBy) { %>
                            <small class="d-block text-muted mt-1">
                                by <%= schedule.approvedBy.username %>
                            </small>
                            <% } %>
                        </div>
                        <% } else { %>
                        <div class="status-badge">
                            <span class="badge bg-warning">
                                <i class="fas fa-clock me-1"></i> Pending
                            </span>
                        </div>
                        <% } %>
                        <% if (schedule.archived) { %>
                        <div class="status-badge mt-1">
                            <span class="badge bg-secondary">
                                <i class="fas fa-archive me-1"></i> Archived
                            </span>
                        </div>
                        <% } %>
                    </td>
                    <td>
                        <div class="action-buttons">
                            <a href="/trainingschedule/<%= schedule._id %>" class="btn btn-sm btn-info text-white" data-bs-toggle="tooltip" title="View Schedule">
                                <i class="fas fa-eye"></i>
                            </a>
                            <% if (schedule.isCurrentUserReport && schedule.status === 'pending' && !schedule.archived) { %>
                            <a href="/trainingschedule/<%= schedule._id %>/edit" class="btn btn-sm btn-warning" data-bs-toggle="tooltip" title="Edit Schedule">
                                <i class="fas fa-edit"></i>
                            </a>
                            <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="tooltip" title="Delete Schedule" data-custom-modal-target="deleteScheduleModal<%= schedule._id %>">
                                <i class="fas fa-trash"></i>
                            </button>
                            <% } %>
                        </div>
                    </td>
                </tr>
                        <% }) %>
            </tbody>
        </table>
    </div>
    <% } else { %>
    <div class="alert alert-info text-center">
        <i class="fas fa-info-circle me-2"></i>
        <% if (Object.keys(filters || {}).length > 0 && Object.keys(filters || {}).some(key => filters[key] && key !== 'page' && key !== 'limit')) { %>
            No schedules found matching your filters. <a href="/trainingschedule" class="alert-link">Clear filters</a> to see all schedules.
        <% } else { %>
            No training schedules found.
            <% if (currentUser && currentUser.role !== 'admin') { %>
                <a href="/trainingschedule/new" class="alert-link">Create a new schedule</a>.
            <% } %>
        <% } %>
    </div>
    <% } %>

    <!-- Pagination Controls -->
    <% if (pagination && pagination.totalPages > 1) { %>
    <div class="pagination-container mt-4">
        <div class="pagination-info">
            Showing <span class="fw-bold"><%= (pagination.currentPage - 1) * pagination.pageSize + 1 %></span> to
            <span class="fw-bold"><%= Math.min(pagination.currentPage * pagination.pageSize, pagination.totalReports) %></span> of
            <span class="fw-bold"><%= pagination.totalReports %></span> schedules
        </div>
        <nav aria-label="Page navigation">
            <ul class="pagination">
                <!-- First Page -->
                <li class="page-item <%= !pagination.hasPrev ? 'disabled' : '' %>">
                    <a class="page-link" href="/trainingschedule?<%= new URLSearchParams({...filters, page: 1}).toString() %>" aria-label="First">
                        <i class="fas fa-angle-double-left"></i>
                    </a>
                </li>
                <!-- Previous Page -->
                <li class="page-item <%= !pagination.hasPrev ? 'disabled' : '' %>">
                    <a class="page-link" href="/trainingschedule?<%= new URLSearchParams({...filters, page: pagination.prevPage}).toString() %>" aria-label="Previous">
                        <i class="fas fa-angle-left"></i>
                    </a>
                </li>

                <!-- Page Numbers -->
                <%
                    let startPage = Math.max(1, pagination.currentPage - 2);
                    let endPage = Math.min(pagination.totalPages, startPage + 4);

                    // Adjust start page if we're near the end
                    if (endPage - startPage < 4) {
                        startPage = Math.max(1, endPage - 4);
                    }

                    for (let i = startPage; i <= endPage; i++) {
                %>
                    <li class="page-item <%= pagination.currentPage === i ? 'active' : '' %>">
                        <a class="page-link" href="/trainingschedule?<%= new URLSearchParams({...filters, page: i}).toString() %>">
                            <%= i %>
                        </a>
                    </li>
                <% } %>

                <!-- Next Page -->
                <li class="page-item <%= !pagination.hasNext ? 'disabled' : '' %>">
                    <a class="page-link" href="/trainingschedule?<%= new URLSearchParams({...filters, page: pagination.nextPage}).toString() %>" aria-label="Next">
                        <i class="fas fa-angle-right"></i>
                    </a>
                </li>
                <!-- Last Page -->
                <li class="page-item <%= !pagination.hasNext ? 'disabled' : '' %>">
                    <a class="page-link" href="/trainingschedule?<%= new URLSearchParams({...filters, page: pagination.totalPages}).toString() %>" aria-label="Last">
                        <i class="fas fa-angle-double-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
    <% } %>
</div>

<!-- Delete Schedule Modals -->
<% if (TrainingSchedules && TrainingSchedules.length) { %>
    <% TrainingSchedules.forEach(schedule => { %>
        <% if (schedule.isCurrentUserReport && schedule.status === 'pending' && !schedule.archived) { %>
            <!-- Delete Schedule Modal for <%= schedule._id %> -->
            <div
                class="custom-modal-overlay report-modal"
                id="deleteScheduleModal<%= schedule._id %>"
                role="dialog"
                aria-labelledby="deleteScheduleModalLabel<%= schedule._id %>">
                <div class="custom-modal">
                    <div class="custom-modal-header bg-danger">
                        <h5 class="custom-modal-title" id="deleteScheduleModalLabel<%= schedule._id %>">
                            <i class="fas fa-lock"></i>
                            Confirm Password
                        </h5>
                        <button type="button" class="custom-modal-close" aria-label="Close">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                    <div class="custom-modal-body">
                        <div class="custom-modal-content">
                            <i class="fas fa-exclamation-triangle custom-modal-icon text-danger"></i>
                            <h4>Please confirm your password to delete this schedule</h4>
                            <p class="text-danger mt-3">
                                <strong>This action cannot be undone.</strong>
                            </p>

                            <div class="form-group mt-3">
                                <label for="confirmPassword<%= schedule._id %>" class="form-label">
                                    <strong>Your Password:</strong>
                                </label>
                                <input
                                    type="password"
                                    class="form-control"
                                    id="confirmPassword<%= schedule._id %>"
                                    name="password"
                                    required
                                    placeholder="Enter your password to confirm">
                                <div class="invalid-feedback">
                                    Please enter your password.
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="custom-modal-footer">
                        <form
                            id="passwordConfirmForm<%= schedule._id %>"
                            action="/trainingschedule/<%= schedule._id %>?_method=DELETE"
                            method="POST"
                            class="d-inline">
                            <!-- Hidden input to store the password -->
                            <input
                                type="hidden"
                                id="hiddenPassword<%= schedule._id %>"
                                name="password"
                                value="" />
                            <!-- Hidden input to store the return URL -->
                            <input
                                type="hidden"
                                name="returnUrl"
                                value="<%= currentUrl %>" />
                            <button
                                type="submit"
                                class="custom-modal-btn custom-modal-btn-danger">
                                <i class="fas fa-trash me-1"></i> Delete Schedule
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        <% } %>
    <% }) %>
<% } %>

<!-- Filter Toggle Script -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const toggleFiltersBtn = document.getElementById('toggleFilters');
        const filterBody = document.getElementById('filterBody');

        // Check if there are active filters
        const hasActiveFilters = <%= Object.keys(filters || {}).some(key => filters[key] && key !== 'page' && key !== 'limit') ? 'true' : 'false' %>;

        // If no active filters, collapse the filter section by default
        if (!hasActiveFilters) {
            filterBody.style.display = 'none';
            toggleFiltersBtn.querySelector('i').classList.remove('fa-chevron-down');
            toggleFiltersBtn.querySelector('i').classList.add('fa-chevron-up');
        }

        toggleFiltersBtn.addEventListener('click', function(e) {
            e.preventDefault();
            if (filterBody.style.display === 'none') {
                filterBody.style.display = 'block';
                toggleFiltersBtn.querySelector('i').classList.remove('fa-chevron-up');
                toggleFiltersBtn.querySelector('i').classList.add('fa-chevron-down');
            } else {
                filterBody.style.display = 'none';
                toggleFiltersBtn.querySelector('i').classList.remove('fa-chevron-down');
                toggleFiltersBtn.querySelector('i').classList.add('fa-chevron-up');
            }
        });
    });
</script>

<!-- Custom modal scripts -->
<script src="/js/reportModals.js"></script>
<script src="/js/customModal.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        // For password confirmation modals
        <% if (TrainingSchedules && TrainingSchedules.length) { %>
            <% TrainingSchedules.forEach(schedule => { %>
                <% if (schedule.isCurrentUserReport && schedule.status === 'pending' && !schedule.archived) { %>
                    const passwordInput<%= schedule._id %> = document.getElementById("confirmPassword<%= schedule._id %>");
                    const hiddenPassword<%= schedule._id %> = document.getElementById("hiddenPassword<%= schedule._id %>");
                    const passwordForm<%= schedule._id %> = document.getElementById("passwordConfirmForm<%= schedule._id %>");

                    if (passwordForm<%= schedule._id %> && passwordInput<%= schedule._id %> && hiddenPassword<%= schedule._id %>) {
                        passwordForm<%= schedule._id %>.addEventListener("submit", function () {
                            hiddenPassword<%= schedule._id %>.value = passwordInput<%= schedule._id %>.value;
                        });
                    }
                <% } %>
            <% }) %>
        <% } %>
    });
</script>