<%- layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/css/weeklyReportsIndex.css" />

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Training Schedule Forms</h1>
        <div class="d-flex gap-2">
            <% if (currentUser && currentUser.role !== 'admin') { %>
            <a href="/trainingschedule/new" class="btn btn-primary">
                <i class="fas fa-plus"></i> New Schedule
            </a>
            <% } %>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="card mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0">Filter Schedules</h5>
        </div>
        <div class="card-body">
            <form action="/trainingschedule" method="GET" class="row g-3">
                <div class="col-md-4">
                    <label for="studentName" class="form-label">Student Name</label>
                    <input
                        type="text"
                        class="form-control"
                        id="studentName"
                        name="studentName"
                        value="<%= filters.studentName || '' %>"
                    />
                </div>
                <div class="col-md-4">
                    <label for="internshipSite" class="form-label">Internship Site</label>
                    <input
                        type="text"
                        class="form-control"
                        id="internshipSite"
                        name="internshipSite"
                        value="<%= filters.internshipSite || '' %>"
                    />
                </div>
                <div class="col-md-4">
                    <label for="status" class="form-label">Status</label>
                    <select class="form-select" id="status" name="status">
                        <option value="">All</option>
                        <option value="pending" <%= filters.status === 'pending' ? 'selected' : '' %>>
                            Pending
                        </option>
                        <option value="approved" <%= filters.status === 'approved' ? 'selected' : '' %>>
                            Approved
                        </option>
                        <option value="rejected" <%= filters.status === 'rejected' ? 'selected' : '' %>>
                            Rejected
                        </option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label for="sortBy" class="form-label">Sort By</label>
                    <select class="form-select" id="sortBy" name="sortBy">
                        <option value="dateSubmitted_desc" <%= filters.sortBy === 'dateSubmitted_desc' ? 'selected' : '' %>>
                            Newest First
                        </option>
                        <option value="dateSubmitted_asc" <%= filters.sortBy === 'dateSubmitted_asc' ? 'selected' : '' %>>
                            Oldest First
                        </option>
                        <option value="studentName_asc" <%= filters.sortBy === 'studentName_asc' ? 'selected' : '' %>>
                            Student Name (A-Z)
                        </option>
                        <option value="studentName_desc" <%= filters.sortBy === 'studentName_desc' ? 'selected' : '' %>>
                            Student Name (Z-A)
                        </option>
                    </select>
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="fas fa-filter"></i> Apply Filters
                    </button>
                    <a href="/trainingschedule" class="btn btn-secondary">
                        <i class="fas fa-undo"></i> Reset
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Schedules Table -->
    <div class="card">
        <div class="card-header bg-light">
            <h5 class="mb-0">Training Schedule Forms</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Student Name</th>
                            <th>Internship Site</th>
                            <th>Training Period</th>
                            <th>Status</th>
                            <th>Date Submitted</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (TrainingSchedules.length === 0) { %>
                        <tr>
                            <td colspan="6" class="text-center py-4">
                                <div class="alert alert-info mb-0">
                                    <i class="fas fa-info-circle me-2"></i>
                                    No training schedules found.
                                    <% if (currentUser && currentUser.role !== 'admin') { %>
                                    <a href="/trainingschedule/new" class="alert-link">Create a new schedule</a>.
                                    <% } %>
                                </div>
                            </td>
                        </tr>
                        <% } else { %>
                        <% TrainingSchedules.forEach(schedule => { %>
                        <tr>
                            <td><%= schedule.studentName %></td>
                            <td><%= schedule.internshipSite %></td>
                            <td>
                                <%= new Date(schedule.startDate).toLocaleDateString() %> -
                                <%= new Date(schedule.endDate).toLocaleDateString() %>
                            </td>
                            <td>
                                <% if (schedule.status === 'pending') { %>
                                <span class="badge bg-warning text-dark">Pending</span>
                                <% } else if (schedule.status === 'approved') { %>
                                <span class="badge bg-success">Approved</span>
                                <% } else if (schedule.status === 'rejected') { %>
                                <span class="badge bg-danger">Rejected</span>
                                <% } %>
                            </td>
                            <td><%= new Date(schedule.dateSubmitted).toLocaleDateString() %></td>
                            <td>
                                <a href="/trainingschedule/<%= schedule._id %>" class="btn btn-sm btn-info">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </td>
                        </tr>
                        <% }) %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Pagination -->
    <% if (pagination.totalPages > 1) { %>
    <div class="d-flex justify-content-between align-items-center mt-4">
        <div>
            Showing <%= (pagination.currentPage - 1) * pagination.pageSize + 1 %> to
            <%= Math.min(pagination.currentPage * pagination.pageSize, pagination.totalReports) %>
            of <%= pagination.totalReports %> schedules
        </div>
        <nav aria-label="Page navigation">
            <ul class="pagination mb-0">
                <li class="page-item <%= !pagination.hasPrev ? 'disabled' : '' %>">
                    <a class="page-link" href="/trainingschedule?page=<%= pagination.prevPage %>&<%= new URLSearchParams(filters).toString() %>" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <% for(let i = 1; i <= pagination.totalPages; i++) { %>
                <li class="page-item <%= pagination.currentPage === i ? 'active' : '' %>">
                    <a class="page-link" href="/trainingschedule?page=<%= i %>&<%= new URLSearchParams(filters).toString() %>">
                        <%= i %>
                    </a>
                </li>
                <% } %>
                <li class="page-item <%= !pagination.hasNext ? 'disabled' : '' %>">
                    <a class="page-link" href="/trainingschedule?page=<%= pagination.nextPage %>&<%= new URLSearchParams(filters).toString() %>" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
    <% } %>
</div>
