<%- layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/css/dashboard.css" />

<div class="dashboard-container">
	<div class="welcome-section">
		<h1>User Management</h1>
		<p>Manage user roles and permissions</p>
	</div>

	<div class="dashboard-card">
		<h3>All Users</h3>
		<div class="table-responsive">
			<table class="table table-striped">
				<thead>
					<tr>
						<th>Username</th>
						<th>Name</th>
						<th>Role</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					<% users.forEach(user => { %>
					<tr>
						<td><%= user.username %></td>
						<td><%= user.firstName %> <%= user.lastName %></td>
						<td>
							<span
								class="badge <%= user.role === 'admin' ? 'bg-danger' : 'bg-primary' %>"
								><%= user.role %></span
							>
						</td>
						<td>
							<div class="btn-group" role="group">
								<form
									action="/admin/users/<%= user._id %>/toggle-role"
									method="POST"
									class="d-inline me-2">
									<button
										type="submit"
										class="btn btn-sm <%= user.role === 'admin' ? 'btn-outline-primary' : 'btn-outline-danger' %>">
										Make <%= user.role === 'admin' ? 'User' : 'Admin' %>
									</button>
								</form>
								<button
									type="button"
									class="btn btn-sm btn-danger"
									data-toggle="custom-modal"
									data-target="#deleteUserModal<%= user._id %>">
									<i class="fas fa-trash"></i> Delete
								</button>
							</div>
						</td>
					</tr>

					<!-- Delete User Modal -->
					<div
						class="custom-modal"
						id="deleteUserModal<%= user._id %>"
						tabindex="-1"
						role="dialog"
						aria-labelledby="deleteUserModalLabel<%= user._id %>"
						aria-hidden="true">
						<div class="custom-modal-dialog">
							<div class="custom-modal-header custom-modal-header-danger">
								<h5
									class="custom-modal-title"
									id="deleteUserModalLabel<%= user._id %>">
									<i class="fas fa-exclamation-triangle me-2"></i>
									Delete User
								</h5>
								<button
									type="button"
									class="custom-modal-close"
									data-dismiss="custom-modal"
									aria-label="Close">
									<i class="fas fa-times"></i>
								</button>
							</div>
							<div class="custom-modal-body">
								<div class="custom-modal-centered">
									<i
										class="fas fa-user-slash custom-modal-icon text-danger"></i>
									<h4>Are you sure you want to delete this user?</h4>
								</div>

								<div class="custom-modal-alert custom-modal-alert-warning">
									<i class="fas fa-info-circle me-2"></i>
									<div>
										<strong>User details:</strong>
										<ul class="mb-0 mt-2">
											<li><strong>Username:</strong> <%= user.username %></li>
											<li>
												<strong>Name:</strong> <%= user.firstName %> <%=
												user.lastName %>
											</li>
											<li><strong>Role:</strong> <%= user.role %></li>
										</ul>
									</div>
								</div>

								<div class="custom-modal-alert custom-modal-alert-info">
									<i class="fas fa-archive me-2"></i>
									<div>
										All reports created by this user will be automatically
										archived and accessible in the Archived Reports section.
									</div>
								</div>

								<p class="text-danger">
									<strong>This action cannot be undone.</strong>
								</p>
							</div>
							<div class="custom-modal-footer">
								<button
									type="button"
									class="custom-modal-btn custom-modal-btn-light"
									data-dismiss="custom-modal">
									<i class="fas fa-times me-1"></i> Cancel
								</button>
								<form
									action="/admin/users/<%= user._id %>/delete"
									method="POST"
									class="d-inline">
									<button
										type="submit"
										class="custom-modal-btn custom-modal-btn-danger">
										<i class="fas fa-trash me-1"></i> Delete User
									</button>
								</form>
							</div>
						</div>
					</div>
					<% }) %>
				</tbody>
			</table>
		</div>
	</div>
</div>

<script src="/js/modalHandlers.js"></script>
