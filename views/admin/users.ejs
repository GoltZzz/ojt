<%- layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/css/dashboard.css" />

<div class="dashboard-container">
	<div class="welcome-section">
		<h1>User Management</h1>
		<p>Manage user roles and permissions</p>
	</div>

	<div class="dashboard-card">
		<div class="d-flex justify-content-between align-items-center mb-3">
			<h3>All Users</h3>
			<button
				type="button"
				class="btn btn-primary"
				data-custom-modal-target="uploadStudentsModal">
				<i class="fas fa-user-plus"></i> Register New User
			</button>
		</div>
		<div class="table-responsive">
			<table class="table table-striped">
				<thead>
					<tr>
						<th>Username</th>
						<th>Name</th>
						<th>Role</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					<% users.forEach(user => { %>
					<tr>
						<td><%= user.username %></td>
						<td><%= user.firstName %> <%= user.lastName %></td>
						<td>
							<span
								class="badge <%= user.role === 'admin' ? 'bg-danger' : 'bg-primary' %>"
								><%= user.role %></span
							>
						</td>
						<td>
							<div class="btn-group" role="group">
								<button
									type="button"
									class="btn btn-sm <%= user.role === 'admin' ? 'btn-outline-primary' : 'btn-outline-danger' %>"
									data-custom-modal-target="toggleRoleModal<%= user._id %>">
									Make <%= user.role === 'admin' ? 'User' : 'Admin' %>
								</button>
								<% if (currentUser._id.toString() === user._id.toString()) { %>
								<button
									type="button"
									class="btn btn-sm btn-danger"
									data-custom-modal-target="selfDeleteUserModal<%= user._id %>">
									<i class="fas fa-trash"></i> Delete
								</button>
								<% } else { %>
								<button
									type="button"
									class="btn btn-sm btn-danger"
									data-custom-modal-target="deleteUserModal<%= user._id %>">
									<i class="fas fa-trash"></i> Delete
								</button>
								<% } %>
							</div>
						</td>
					</tr>

					<!-- Delete User Modal -->
					<div
						class="custom-modal-overlay"
						id="deleteUserModal<%= user._id %>"
						role="dialog"
						aria-labelledby="deleteUserModalLabel<%= user._id %>">
						<div class="custom-modal">
							<div class="custom-modal-header bg-danger">
								<h5
									class="custom-modal-title"
									id="deleteUserModalLabel<%= user._id %>">
									<i class="fas fa-exclamation-triangle"></i>
									Delete User
								</h5>
								<button
									type="button"
									class="custom-modal-close"
									aria-label="Close">
									<i class="fas fa-times"></i>
								</button>
							</div>
							<div class="custom-modal-body">
								<div class="custom-modal-content">
									<i
										class="fas fa-user-slash custom-modal-icon text-danger"></i>
									<h4>Are you sure you want to delete this user?</h4>
									<p class="text-danger mt-3">
										<strong>This action cannot be undone.</strong>
									</p>
								</div>
							</div>
							<div class="custom-modal-footer">
								<form
									action="/admin/users/<%= user._id %>/delete"
									method="POST"
									data-custom-message="User has been deleted successfully"
									data-action-type="delete"
									class="d-inline">
									<button
										type="submit"
										class="custom-modal-btn custom-modal-btn-danger">
										<i class="fas fa-trash me-1"></i> Delete User
									</button>
								</form>
							</div>
						</div>
					</div>

					<!-- Toggle Role Modal -->
					<div
						class="custom-modal-overlay"
						id="toggleRoleModal<%= user._id %>"
						role="dialog"
						aria-labelledby="toggleRoleModalLabel<%= user._id %>">
						<div class="custom-modal">
							<div
								class="custom-modal-header <%= user.role === 'admin' ? 'bg-primary' : 'bg-danger' %>">
								<h5
									class="custom-modal-title"
									id="toggleRoleModalLabel<%= user._id %>">
									<i class="fas fa-user-shield"></i>
									Change User Role
								</h5>
								<button
									type="button"
									class="custom-modal-close"
									aria-label="Close">
									<i class="fas fa-times"></i>
								</button>
							</div>
							<div class="custom-modal-body">
								<div class="custom-modal-content">
									<i
										class="fas fa-user-shield custom-modal-icon <%= user.role === 'admin' ? 'text-primary' : 'text-danger' %>"></i>
									<h4>Change role for <%= user.username %>?</h4>
									<p class="mt-3">
										You are about to change this user's role from
										<strong><%= user.role %></strong> to
										<strong
											><%= user.role === 'admin' ? 'user' : 'admin' %></strong
										>.
									</p>
									<% if (user.role === 'user') { %>
									<p class="text-danger">
										<strong>Warning:</strong> Admin users have full access to
										the system, including user management and report approval.
									</p>
									<% } else { %>
									<p class="text-primary">
										<strong>Note:</strong> Regular users can only create and
										manage their own reports.
									</p>
									<% } %>
								</div>
							</div>
							<div class="custom-modal-footer">
								<form
									action="/admin/users/<%= user._id %>/toggle-role"
									method="POST"
									data-custom-message="User role has been updated successfully"
									data-action-type="role"
									class="d-inline">
									<button
										type="submit"
										class="custom-modal-btn <%= user.role === 'admin' ? 'custom-modal-btn-primary' : 'custom-modal-btn-danger' %>">
										<i class="fas fa-user-shield me-1"></i> Confirm Role Change
									</button>
								</form>
							</div>
						</div>
					</div>
					<% }) %>
				</tbody>
			</table>
		</div>
	</div>
</div>

<!-- Self Delete User Modal for Current User -->
<div
	class="custom-modal-overlay"
	id="selfDeleteUserModal<%= currentUser._id %>"
	role="dialog"
	aria-labelledby="selfDeleteUserModalLabel<%= currentUser._id %>">
	<div class="custom-modal">
		<div class="custom-modal-header bg-danger">
			<h5
				class="custom-modal-title"
				id="selfDeleteUserModalLabel<%= currentUser._id %>">
				<i class="fas fa-exclamation-triangle"></i>
				Delete Your Account
			</h5>
			<button type="button" class="custom-modal-close" aria-label="Close">
				<i class="fas fa-times"></i>
			</button>
		</div>
		<div class="custom-modal-body">
			<div class="custom-modal-content">
				<i class="fas fa-user-slash custom-modal-icon text-danger"></i>
				<h4>Are you sure you want to delete your account?</h4>
				<p class="text-danger mt-3 mb-4">
					<strong>This action cannot be undone.</strong>
				</p>

				<form
					action="/admin/users/<%= currentUser._id %>/self-delete"
					method="POST"
					class="text-start">
					<div class="form-group mb-4">
						<label for="password" class="form-label">
							<strong>Enter your password to confirm:</strong>
						</label>
						<div class="input-group">
							<span class="input-group-text"><i class="fas fa-lock"></i></span>
							<input
								type="password"
								class="form-control"
								id="password"
								name="password"
								placeholder="Enter your password"
								required />
						</div>
					</div>
					<div class="d-grid">
						<button
							type="submit"
							class="custom-modal-btn custom-modal-btn-danger">
							<i class="fas fa-trash me-1"></i> Confirm Deletion
						</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

<!-- Excel Upload Modal -->
<div
	class="custom-modal-overlay"
	id="uploadStudentsModal"
	role="dialog"
	aria-labelledby="uploadStudentsModalLabel">
	<div class="custom-modal">
		<div class="custom-modal-header bg-primary">
			<h5 class="custom-modal-title" id="uploadStudentsModalLabel">
				<i class="fas fa-file-excel"></i>
				Upload Students Excel File
			</h5>
			<button type="button" class="custom-modal-close" aria-label="Close">
				<i class="fas fa-times"></i>
			</button>
		</div>
		<div class="custom-modal-body">
			<div class="custom-modal-content">
				<i class="fas fa-upload custom-modal-icon text-primary"></i>
				<h4>Upload Student List</h4>
				<p class="mt-3">
					Please upload an Excel file (.xlsx) containing the following columns:
				</p>
				<ul class="text-start text-muted small mb-4">
					<li>LastName</li>
					<li>FirstName</li>
					<li>MiddleName (optional)</li>
					<li>studentIdNumber</li>
					<li>internshipSite</li>
					<li>course</li>
					<li>password</li>
				</ul>

				<form id="uploadStudentsForm" class="text-start">
					<div class="form-group mb-4">
						<label for="excelFile" class="form-label">
							<strong>Select Excel File:</strong>
						</label>
						<input
							type="file"
							class="form-control"
							id="excelFile"
							name="excel"
							accept=".xlsx"
							required />
					</div>
					<div class="d-grid">
						<button
							type="submit"
							class="custom-modal-btn custom-modal-btn-primary">
							<i class="fas fa-upload me-1"></i> Upload Students
						</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

<!-- Custom modal script is loaded in boilerplate.ejs -->
