<%- layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/css/dashboard.css" />

<div class="dashboard-container">
	<div class="welcome-section">
		<h1>Admin Dashboard</h1>
		<p>Manage your application</p>
	</div>

	<div class="dashboard-grid">
		<div class="dashboard-card">
			<h3>System Stats</h3>
			<div class="stats-grid">
				<div class="stat-item">
					<span class="stat-number"><%= stats.totalUsers %></span>
					<span class="stat-label">Total Users</span>
				</div>
				<div class="stat-item">
					<span class="stat-number"><%= stats.totalWeeklyReports %></span>
					<span class="stat-label">Weekly Reports</span>
				</div>
				<div class="stat-item">
					<span class="stat-number"><%= stats.pendingReports %></span>
					<span class="stat-label">Pending Reports</span>
				</div>
				<div class="stat-item">
					<span class="stat-number"><%= stats.totalDocumentation %></span>
					<span class="stat-label">Documentation</span>
				</div>
				<div class="stat-item">
					<span class="stat-number"><%= stats.totalTimeReports %></span>
					<span class="stat-label">Time Reports</span>
				</div>
			</div>
		</div>

		<div class="dashboard-card full-width">
			<h3>User Activity</h3>
			<div class="table-responsive">
				<table class="table table-hover">
					<thead>
						<tr>
							<th>Name</th>
							<th>Weekly Reports</th>
							<th>Documentation</th>
							<th>Time Reports</th>
						</tr>
					</thead>
					<tbody>
						<% userStats.forEach(user => { %>
						<tr>
							<td><%= user.fullName %></td>
							<td><%= user.weeklyReports %></td>
							<td><%= user.documentation %></td>
							<td><%= user.timeReports %></td>
						</tr>
						<% }) %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
