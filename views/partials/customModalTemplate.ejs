<!-- 
  Custom Modal Template
  
  Usage:
  1. Copy this template and replace the ID, classes, and content as needed
  2. Use data-toggle="custom-modal" and data-target="#modalId" for trigger buttons
  3. Use data-dismiss="custom-modal" for close buttons inside the modal
  
  Modal Types:
  - Add appropriate header class for different types:
    - custom-modal-header-primary
    - custom-modal-header-success
    - custom-modal-header-danger
    - custom-modal-header-info
    - custom-modal-header-warning
    - custom-modal-header-secondary
-->

<!-- Delete User Modal Example -->
<div class="custom-modal" id="exampleDeleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleDeleteModalLabel" aria-hidden="true">
  <div class="custom-modal-dialog">
    <div class="custom-modal-header custom-modal-header-danger">
      <h5 class="custom-modal-title" id="exampleDeleteModalLabel">
        <i class="fas fa-exclamation-triangle me-2"></i>
        Delete User
      </h5>
      <button type="button" class="custom-modal-close" data-dismiss="custom-modal" aria-label="Close">
        <i class="fas fa-times"></i>
      </button>
    </div>
    <div class="custom-modal-body">
      <div class="custom-modal-centered">
        <i class="fas fa-user-slash custom-modal-icon text-danger"></i>
        <h4>Are you sure you want to delete this user?</h4>
      </div>
      <p>This will permanently delete the user account and all associated data.</p>
      <p class="text-danger">
        <strong>This action cannot be undone.</strong>
      </p>
    </div>
    <div class="custom-modal-footer">
      <button type="button" class="custom-modal-btn custom-modal-btn-light" data-dismiss="custom-modal">
        <i class="fas fa-times me-1"></i> Cancel
      </button>
      <form action="/admin/users/123/delete" method="POST" class="d-inline">
        <button type="submit" class="custom-modal-btn custom-modal-btn-danger">
          <i class="fas fa-trash me-1"></i> Delete User
        </button>
      </form>
    </div>
  </div>
</div>

<!-- Archive Report Modal Example -->
<div class="custom-modal" id="exampleArchiveModal" tabindex="-1" role="dialog" aria-labelledby="exampleArchiveModalLabel" aria-hidden="true">
  <div class="custom-modal-dialog">
    <div class="custom-modal-header custom-modal-header-secondary">
      <h5 class="custom-modal-title" id="exampleArchiveModalLabel">
        <i class="fas fa-archive me-2"></i>
        Archive Report
      </h5>
      <button type="button" class="custom-modal-close" data-dismiss="custom-modal" aria-label="Close">
        <i class="fas fa-times"></i>
      </button>
    </div>
    <div class="custom-modal-body">
      <div class="custom-modal-centered">
        <i class="fas fa-file-archive custom-modal-icon text-secondary"></i>
        <h4>Are you sure you want to archive this report?</h4>
      </div>
      <p>Archiving this report will move it to the archive section.</p>
      
      <div class="form-group">
        <label for="archiveReason" class="form-label">Reason for Archiving (Optional)</label>
        <textarea class="form-control" id="archiveReason" rows="3" placeholder="Enter reason for archiving..."></textarea>
      </div>
    </div>
    <div class="custom-modal-footer">
      <button type="button" class="custom-modal-btn custom-modal-btn-light" data-dismiss="custom-modal">
        <i class="fas fa-times me-1"></i> Cancel
      </button>
      <form id="archiveForm" action="/admin/reports/123/archive" method="POST" class="d-inline">
        <input type="hidden" id="hiddenArchiveReason" name="archiveReason" value="">
        <button type="submit" class="custom-modal-btn custom-modal-btn-secondary">
          <i class="fas fa-archive me-1"></i> Archive Report
        </button>
      </form>
    </div>
  </div>
</div>

<!-- Approve Report Modal Example -->
<div class="custom-modal" id="exampleApproveModal" tabindex="-1" role="dialog" aria-labelledby="exampleApproveModalLabel" aria-hidden="true">
  <div class="custom-modal-dialog">
    <div class="custom-modal-header custom-modal-header-success">
      <h5 class="custom-modal-title" id="exampleApproveModalLabel">
        <i class="fas fa-check-circle me-2"></i>
        Approve Report
      </h5>
      <button type="button" class="custom-modal-close" data-dismiss="custom-modal" aria-label="Close">
